rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ” Funzioni di utilitÃ  per la sicurezza
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'admin';
    }
    
    function canManageProject() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role in ['admin', 'project_manager'];
    }
    
    function canManagePersonnel() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role in ['admin', 'hr_manager'];
    }
    
    function isValidUser() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid));
    }
    
    // ğŸ‘¤ Profili utenti - Solo owner e admin possono leggere/modificare
    match /userProfiles/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // ğŸ—ï¸ Cantieri - Project managers e admin possono gestire
    match /cantieri/{cantiereId} {
      allow read: if isValidUser();
      allow create: if canManageProject();
      allow update: if canManageProject() || 
        (isValidUser() && onlyProgressUpdate());
      allow delete: if isAdmin();
      
      function onlyProgressUpdate() {
        return request.writeFields.hasOnly(['progresso', 'stato', 'updatedAt']);
      }
    }
    
    // ğŸ“ˆ Storico progresso cantieri
    match /cantieriProgress/{progressId} {
      allow read: if isValidUser();
      allow create: if canManageProject();
      allow update: if canManageProject();
      allow delete: if isAdmin();
    }
    
    // ğŸ“ Allegati cantieri
    match /cantieriAttachments/{attachmentId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ‘¤ Clienti - Tutti possono leggere, solo manager possono modificare
    match /clienti/{clienteId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ‘¥ Contatti clienti
    match /clientiContacts/{contactId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ“‹ Preventivi
    match /preventivi/{preventivoId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ§¾ Fatture
    match /fatture/{fatturaId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ“¦ Materiali magazzino
    match /materiali/{materialeId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ“Š Movimenti materiali
    match /materialiMovimenti/{movimentoId} {
      allow read: if isValidUser();
      allow create: if isValidUser();
      allow update: if canManageProject();
      allow delete: if isAdmin();
    }
    
    // ğŸ“ˆ Scorte
    match /scorte/{scortaId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    

    
    // ğŸ‘¥ Dipendenti - Solo HR e admin
    match /dipendenti/{dipendenteId} {
      allow read: if isValidUser();
      allow write: if canManagePersonnel();
    }
    
    // â° Timesheet - Dipendenti possono creare, HR puÃ² gestire
    match /timesheet/{timesheetId} {
      allow read: if isValidUser();
      allow create: if isValidUser();
      allow update: if canManagePersonnel() || 
        (isValidUser() && isOwner(resource.data.dipendenteId));
      allow delete: if canManagePersonnel();
    }
    
    // ğŸ“… Presenze
    match /presenze/{presenzaId} {
      allow read: if isValidUser();
      allow create: if isValidUser();
      allow update: if canManagePersonnel() || 
        (isValidUser() && isOwner(resource.data.dipendenteId));
      allow delete: if canManagePersonnel();
    }
    
    // ğŸšš Fornitori
    match /fornitori/{fornitoreId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ“¦ Ordini fornitori
    match /fornitori_ordini/{ordineId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸš› Mezzi
    match /mezzi/{mezzoId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ”§ Manutenzione mezzi
    match /mezzi_manutenzione/{manutenzioneId} {
      allow read: if isValidUser();
      allow write: if canManageProject();
    }
    
    // ğŸ“Š Analytics - Solo admin e manager
    match /analytics/{analyticsId} {
      allow read: if canManageProject();
      allow write: if isAdmin();
    }
    
    // ğŸ“ˆ Report
    match /reports/{reportId} {
      allow read: if canManageProject();
      allow write: if canManageProject();
    }
    
    // ğŸ”” Notifiche - Solo per utente proprietario
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // âš™ï¸ Impostazioni sistema - Solo admin
    match /settings/{settingId} {
      allow read: if isValidUser();
      allow write: if isAdmin();
    }
    
    // ğŸ“ Log sistema - Solo admin
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // ğŸ§ª Test - Solo admin (per debug)
    match /test/{testId} {
      allow read, write: if isAdmin();
    }
  }
} 