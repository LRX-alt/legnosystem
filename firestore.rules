rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // üõ°Ô∏è Funzioni di utilit√†
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role;
    }
    
    function getRoleLevel() {
      let roles = {
        'admin': 100,
        'manager': 80,
        'capo_cantiere': 60,
        'amministrativo': 40,
        'employee': 20,
        'user': 10
      };
      return roles[getUserRole()];
    }
    
    function hasRoleLevel(requiredLevel) {
      return getRoleLevel() >= requiredLevel;
    }
    
    function isAdmin() {
      return getUserRole() == 'admin';
    }
    
    function hasPermission(permission) {
      let role = getUserRole();
      let rolePermissions = {
        'admin': ['*'],
        'manager': [
          'manage_cantieri',
          'manage_clienti',
          'manage_fornitori',
          'manage_materiali',
          'manage_dipendenti',
          'view_analytics',
          'view_financials'
        ],
        'capo_cantiere': [
          'manage_cantieri',
          'view_clienti',
          'view_fornitori',
          'view_materiali',
          'view_dipendenti'
        ],
        'amministrativo': [
          'view_cantieri',
          'view_clienti',
          'view_fornitori',
          'manage_fatture',
          'view_financials'
        ],
        'employee': [
          'view_cantieri',
          'view_materiali'
        ],
        'user': [
          'view_profile'
        ]
      };
      
      return role == 'admin' || 
        (rolePermissions[role] != null && rolePermissions[role].hasAny([permission, '*']));
    }
    
    // üîî Notifiche
    match /notifications/{notificationId} {
      // Gli utenti autenticati possono leggere:
      // - le proprie notifiche (userId == se stessi)
      // - notifiche broadcast al proprio ruolo o a "all"
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (resource.data.recipients != null && resource.data.recipients.hasAny([getUserRole(), 'all']))
      );

      // Creazione notifiche consentita solo a admin autenticati
      // Eccezione controllata: consentiamo la creazione di notifiche di tipo
      // "registration_request" da contesto non autenticato con vincoli stretti,
      // cos√¨ la richiesta di registrazione pu√≤ generare un avviso agli admin.
      allow create: if (isAuthenticated() && isAdmin()) || (
        !isAuthenticated() &&
        request.resource.data.type == 'registration_request' &&
        request.resource.data.userId == 'system' &&
        request.resource.data.recipients.size() == 1 &&
        request.resource.data.recipients[0] == 'admin'
      );

      // Update/Delete: l'utente pu√≤ segnare come letta la propria notifica,
      // gli admin possono gestire tutte.
      allow update, delete: if isAuthenticated() && (
        isAdmin() || resource.data.userId == request.auth.uid
      );
    }

    // üë• Profili Utente
    match /userProfiles/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || hasRoleLevel(80));
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
    
    // üìã Richieste di Registrazione
    match /registrationRequests/{requestId} {
      allow read: if isAuthenticated() && isAdmin();
      allow create: if true; // Chiunque pu√≤ richiedere la registrazione
      allow update, delete: if isAuthenticated() && isAdmin();
    }
    
    // üèóÔ∏è Cantieri
    match /cantieri/{cantiereId} {
      allow read: if isAuthenticated() && hasPermission('view_cantieri');
      allow write: if isAuthenticated() && hasPermission('manage_cantieri');
      
      // Allegati cantiere
      match /allegati/{allegatoId} {
        allow read: if isAuthenticated() && hasPermission('view_cantieri');
        allow write: if isAuthenticated() && hasPermission('manage_cantieri');
      }
      
      // Materiali cantiere
      match /materiali/{materialeId} {
        allow read: if isAuthenticated() && hasPermission('view_cantieri');
        allow write: if isAuthenticated() && hasPermission('manage_cantieri');
      }
    }
    
    // üë• Clienti
    match /clienti/{clienteId} {
      allow read: if isAuthenticated() && hasPermission('view_clienti');
      allow write: if isAuthenticated() && hasPermission('manage_clienti');
    }
    
    // üì¶ Fornitori
    match /fornitori/{fornitoreId} {
      allow read: if isAuthenticated() && hasPermission('view_fornitori');
      allow write: if isAuthenticated() && hasPermission('manage_fornitori');
    }
    
    // üõ†Ô∏è Materiali
    match /materiali/{materialeId} {
      allow read: if isAuthenticated() && hasPermission('view_materiali');
      allow write: if isAuthenticated() && hasPermission('manage_materiali');
    }
    
    // üë∑ Dipendenti
    match /dipendenti/{dipendenteId} {
      allow read: if isAuthenticated() && hasPermission('view_dipendenti');
      allow write: if isAuthenticated() && hasPermission('manage_dipendenti');
    }
    
    // üíº Centri di costo (cantieri e mansioni interne)
    match /centri_costo/{centroId} {
      allow read: if isAuthenticated();
      // Gestione consentita a admin e manager
      allow write: if isAuthenticated() && (hasRoleLevel(80) || isAdmin());
    }
    
    // üí∞ Fatture
    match /fatture/{fatturaId} {
      allow read: if isAuthenticated() && hasPermission('view_fatture');
      allow write: if isAuthenticated() && hasPermission('manage_fatture');
    }
    
    // üìä Analytics
    match /analytics/{docId} {
      allow read: if isAuthenticated() && hasPermission('view_analytics');
      allow write: if false; // Solo tramite Cloud Functions
    }
  }
} 